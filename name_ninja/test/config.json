{
    "name": "name_ninja_test",
    "author": "SirLich",
    "packs": {
        "behaviorPack": "./packs/BP",
        "resourcePack": "./packs/RP"
    },
    "regolith": {
        "dataPath": "./packs/data",
        "profiles": {
            "dev": {
                "_comment": "Export the test addon into your com.mojang folder for testing.",
                "filters": [
                    {
                        "filter": "local_name_ninja"
                    }
                ],
                "export": {
                    "target": "development"
                }
            },
            "local": {
                "_comment": "Export the test addon locally, for quick visual analysis of the results.",
                "filters": [
                    {
                        "filter": "local_name_ninja"
                    }
                ],
                "export": {
                    "target": "local"
                }
            }
        },
        "filterDefinitions": {
            "local_name_ninja": {
                "runWith": "python",
                "script": "../name_ninja.py",
                "settings": {
                    "language": "en_US.lang",
                    "overwrite": false,
                    "entities": {
                        "auto_name": true,
                        "prefix": "§1",
                        "postfix": "§r"
                    },
                    "blocks": {
                        "auto_name": true,
                        "prefix": "§2",
                        "postfix": "§r"
                    },
                    "items": {
                        "auto_name": true,
                        "prefix": "§3",
                        "postfix": "§r"
                    },
                    "spawn_eggs": {
                        "auto_name": true,
                        "prefix": "§4",
                        "postfix": " Spawn Egg§r"
                    }
                }
            }
        }
    }
}